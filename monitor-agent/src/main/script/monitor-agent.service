[Unit]
Description=Monitor Agent Daemon
After=network-online.target
Wants=network-online.target

[Service]
Type=simple
User=root
Group=root
WorkingDirectory=/home/matthew
ExecStart=/usr/bin/java -jar /home/matthew/monitor-agent-1.0.0.jar
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
